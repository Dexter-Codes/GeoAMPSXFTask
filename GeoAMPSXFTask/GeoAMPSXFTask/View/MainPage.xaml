<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeoAMPSXFTask.MainPage"
             NavigationPage.HasNavigationBar="false">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center" >
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="30" Margin="20,0">
            <StackLayout>
            <Label Text="Welcome to GEOAMPS" HorizontalTextAlignment="Center" TextColor="White" FontSize="30" Margin="20"/>

            <Button Text="SIGNUP" Command="{Binding SignUpCommand}" BackgroundColor="Blue" Margin="10"/>
            <Button Text="LOGIN" Command="{Binding LoginCommand}" Background="Green" Margin="10"/>
            </StackLayout>
        </Frame>
       
    </StackLayout>

</ContentPage>
