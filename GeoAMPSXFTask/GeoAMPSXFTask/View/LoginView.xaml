<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeoAMPSXFTask.View.LoginView"
             NavigationPage.HasNavigationBar="false">


        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" >
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="30" Margin="20,0">
                <StackLayout Margin="10">
                    <Label Text="GEOAMPS  LOGIN" FontSize="30" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" Margin="0,10,0,50"/>

                    <Entry Placeholder="UserName" Text="{Binding UserName}" />
                    <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}"/>
                    <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
                        <CheckBox IsChecked="{Binding IsRememberMe}"/>
                        <Label Text="Remember Me" Margin="0,5,0,0" FontSize="Medium"/>
                    </StackLayout>
                    <Button Text="LOGIN" Command="{Binding LoginCommand}" Margin="0,20,0,0" BackgroundColor="Blue"/>
                </StackLayout>
        </Frame>

    </StackLayout>





      
</ContentPage>